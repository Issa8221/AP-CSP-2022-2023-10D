# package or library, random number
import random
print (random.randrange(1,10))

# Concatination
a = "Hello"
b = "Patricia"
c = a +" "+ b
print (c)

# String Format
age = "36"
txt = "My name is Patricia, I am "+ age
print (txt)

# Escape Character
# To insert characters that are illegal in a string, use an escape character, in this case. the escape character is a backslash
#text = "We're are fabulous" Unicorns "From amazingland"
text = 'Were are fabulous\'Unicorns\'From amazingland'
print (text)
